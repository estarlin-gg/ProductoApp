@model IEnumerable<ProductoApp.Models.Product>

@{
    var search = Context.Request.Query["search"].ToString();
    var lowStock = Context.Request.Query["lowStock"].ToString();
}

<h2>Lista de Productos</h2>

<form method="get" class="mb-3 d-flex gap-2 align-items-center">
    <input type="text" name="search" placeholder="Buscar..." value="@search" class="form-control" style="max-width: 200px;" />
    <input type="number" name="lowStock" placeholder="Stock menor a..." value="@lowStock" class="form-control" style="max-width: 150px;" />
    <button type="submit" class="btn btn-primary btn-sm">Filtrar</button>
    <a href="/Products/Index" class="btn btn-secondary btn-sm">Limpiar</a>
    <a href="/Products/Create" class="btn btn-primary">Nuevo Producto</a>
    <a href="/Products/ExportToExcel" class="btn btn-success btn-sm ms-auto">Exportar a Excel</a>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th><a href="?sortOrder=@ViewBag.NameSort&search=@search&lowStock=@lowStock">Nombre</a></th>
            <th><a href="?sortOrder=@ViewBag.PriceSort&search=@search&lowStock=@lowStock">Precio</a></th>
            <th><a href="?sortOrder=@ViewBag.StockSort&search=@search&lowStock=@lowStock">Stock</a></th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <a href="/Products/Details/@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a href="/Products/Edit/@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a href="/Products/Delete/@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<a href="/Account/Logout" class="btn btn-danger ms-2">Cerrar Sesión</a>
