@model ProductoApp.Models.Product

<h2>Eliminar Producto</h2>

<div class="alert alert-warning">
    <strong>¿Estás seguro que deseas eliminar este producto?</strong>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Stock</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" id="Id" />
    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
    <a href="/Products/Index" class="btn btn-secondary">Cancelar</a>
</form>
